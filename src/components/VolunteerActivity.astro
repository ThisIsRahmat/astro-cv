---
export interface Props {
  title: string;
  organization: string;
  orgURL: string;
  from: Date;
  to?: Date | undefined;
}

const { title, organization, orgURL, from, to } = Astro.props;
---

<div class="flex gap-2">
  <h3>{title} at <a href={orgURL} target="_blank">{organization}</a></h3>
  <div class="text-gray-400">
    <time datetime={from.toISOString()}>{from.getFullYear()}</time>
    <span>â€”</span>
    {to ? <time datetime={to.toISOString()}>{to.getFullYear()}</time> : <span>present</span>}
  </div>
</div>

<div class="prose-custom">
  <slot />
</div>
